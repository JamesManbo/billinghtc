    $(document).ready(function () {

        $('#form_pb').validate({
            rules: {
                NationId: "required",
                RegionId: "required",
                SettingCustomer: "required",
                PhoneNumber: "required",
                Email: "required",
                TypeCustomer: "required",               
                GroupCustomer: "required",
                UserName: "required",
                CustomerId: "required",
                Address1: "required",
                CateCustomer: "required"

            },
            messages: {
                NationId: "Bạn cần chọn quốc gia",
